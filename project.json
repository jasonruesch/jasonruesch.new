{
  "name": "jasonruesch",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "./src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/jasonruesch"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "jasonruesch:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "jasonruesch:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "jasonruesch:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "jasonruesch:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "jasonruesch:build:development"
        },
        "production": {
          "buildTarget": "jasonruesch:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "coverage/jasonruesch"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["./src"]
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "defaultConfiguration": "production",
      "options": {
        "engine": "docker",
        "metadata": {
          "images": ["ghcr.io/jasonruesch"],
          "load": true,
          "push": true,
          "tags": [
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=sha,prefix=sha-"
          ]
        }
      },
      "configurations": {
        "development": {
          "file": "Dockerfile",
          "metadata": {
            "images": ["jasonruesch"],
            "push": false,
            "tags": ["type=sha,prefix=sha-"]
          }
        },
        "production": {
          "file": "Dockerfile.prod",
          "metadata": {
            "images": ["ghcr.io/jasonruesch"],
            "load": true,
            "push": true,
            "cache-from": ["type=gha"],
            "cache-to": ["type=gha,mode=max"],
            "tags": [
              "type=ref,event=branch",
              "type=ref,event=tag",
              "type=sha",
              "type=sha,format=long",
              "latest"
            ]
          }
        }
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "npm": false,
        "tagFormat": "jasonruesch-v${VERSION}"
      }
    }
  },
  "tags": ["type:app", "scope:jasonruesch"]
}
